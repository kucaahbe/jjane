<%% tabbar do |tabs| %>
  <%%= tabs.headers t(:tab_content), t(:tab_meta) %>

  <%% tabs.content do |tabcontent| %>
    <%% tabcontent.draw do %>
      <%%= f.error_messages %>
      <p>
      <%%= f.hidden_field :user_id %>
      <%%= f.hidden_field :page_id %>
      </p>
      <p>
      <%%= f.label t(:label_title) %>
      <%%= f.text_field :title, :class => 'title' %>
      </p>
      <%% field_set_tag nil, :id => 'preview_node', :class => 'collapsed' do %>
	<%%= content_tag :legend, t(:preview), :onclick => 'PreviewNodeShowHide();' %>
	<%%= f.text_area :preview, :style => 'width:100%; height:70px; display:none;' %>
      <%% end %>
      <p>
      <%%= f.text_area :content, :class => 'mceEditor' %>
      </p>
<% for attribute in attributes -%>
      <p>
      <%%= f.label t(:label_<%= attribute.name %>) %><br />
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
      </p>
<%- end -%>
    <%% end %>

    <%% tabcontent.draw do %>
      <%% f.fields_for @<%= node_name %>.meta do |meta_f| %>
	<%% Meta.tags.each do |meta_tag| %>
	  <p>
	  <%%= meta_f.label meta_tag %><br />
	  <%%= meta_f.text_field meta_tag %>
	  </p>
	<%% end %>
      <%% end %>
    <%% end %>
  <%% end %>
<%% end %>

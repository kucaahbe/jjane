<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<% content_tag :title do -%>
  <%- if controller_name=='site' -%>
  <%= (@node || @page).title -%>
  <%- else -%>
  <%= controller_name.capitalize+'::'+action_name.capitalize -%>
  <%- end -%>
<%- end %>
<%# Meta tags -%>
  <% Meta.tags.each do |name| -%>
    <meta name="<%= name %>" content="<%= (@node || @page).meta.content(name) %>" />
  <% end if controller_name=='site' -%>
<%# Stylesheets -%>
<%= stylesheet :notices %>
<%= stylesheet response.layout[/(?!\/)\w*$/] %>
<%= stylesheet('/jjane/stylesheets/default', '/jjane/stylesheets/form_notices') if logged_in? %>
<%# Javascripts -%>
<%= javascript :defaults %>
<%= javascript_include_tag '/jjane/javascripts/application' if logged_in? %>
<%= include_tiny_mce_if_needed %>

<%= title "Редактирование страницы" %>

<% form_for @page, :html => { :class => 'jform' } do |f| %>
  <%= f.error_messages %>

  <p><%= f.hidden_field :parent_id %></p>

  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title, :class => 'title' %>
  </p>
  <p>
  <%= f.label :menu %><br />
  <%= f.text_field :menu %>
  </p>

  <p>
  <%= f.label :link %><br />
  <%= f.text_field :link, :disabled => true %>
  </p>

  <%= partial "pages/#{@page._type_}/edit", :f => f %>

  <p>
  <%= f.submit 'Обновить' %> |
  <%= link_to 'посмотреть страницу', root_url+@page.url %> |
  <%= link_to_cancel pages_path %>
  </p>
<% end %>

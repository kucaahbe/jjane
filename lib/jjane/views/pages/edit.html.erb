<%= title t(:title_edit_page) %>

<% form_for @page, :html => { :class => 'jform' } do |f| %>
  <%= f.error_messages %>

  <p><%= f.hidden_field :parent_id %></p>

  <div id="tabs">
    <%= tab_header t(:tab_content), t(:tab_meta) %>
    <div id="tabscontent">
      <div id="tabContent1" class="tabContent" style="display:yes;">

	<p>
	<%= f.label t(:label_menu) %><br />
	<%= f.text_field :menu %>
	</p>
	<p>
	<%= f.label t(:label_link) %><br />
	<%= f.text_field :url, :disabled => true %>
	</p>

	<%= partial "pages/#{@page.page_type}/edit", :f => f %>

      </div>
      <div id="tabContent2" class="tabContent" style="display:none;">
	<% f.fields_for :meta do |meta_f| %>
	  <% Meta.tags.each do |meta_tag| %>
	    <p>
	    <%= meta_f.label meta_tag %><br />
	    <%= meta_f.text_field meta_tag.to_sym %>
	    </p>
	  <% end %>
	<% end %>
      </div>
    </div>
  </div>

  <p>
  <%= f.submit t(:button_update) %> |
  <%= link_to t(:link_show_page), root_url+@page.url %> |
  <%= link_to_cancel pages_path %>
  </p>
<% end %>

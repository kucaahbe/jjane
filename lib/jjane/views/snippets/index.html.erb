<%= title t(:title_snippets) %>

<table class="jjane">
  <tr>
    <th style="width:30%"><%=t :name %></th>
    <th style="width:65%"><%=t :content %></th>
    <th style="width:5%"><%=t :actions %></th>
  </tr>
  <% @snippets.each do |snippet| %>
    <tr>
      <td>
	<%= engine_image 'snippets.png' %>
	<%= link_to_edit snippet.name, edit_snippet_path(snippet) %>
      </td>
      <td><%=h snippet.content %></td>
      <td>
	<%= link_to_destroy snippet %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to_new new_snippet_path %>

<%= will_paginate @snippets %>

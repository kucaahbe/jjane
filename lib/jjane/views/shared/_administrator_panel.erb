<div id="admin_panel">
  <div style="margin-right:100px;">
    <%= pages_link %>
    <%= users_link %>
    <%= snippets_link %>
    <%= filesystem_link %>
  </div>
  
  <div style="text-align:center;">
    <span>
      <%= item_name -%>
    </span>
    <%= crud_actions -%>
  </div>

  <div style="float:right">
    <%= engine_image 'user_me.png' %>
    <span>
      <%= link_to "#{current_user.name}[#{current_user.role}]", edit_user_path(current_user), :title => t(:edit_profile)  %> |
      <%= link_to t(:logout), logout_path %>
    </span>
  </div>

  <div style="clear:both; height:0px;padding:0px; margin:0px;"></div>
</div>
